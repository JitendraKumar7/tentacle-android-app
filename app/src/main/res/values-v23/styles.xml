<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v20/styles.xml on API 20+ devices.
    -->
      <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
		 	<!--   Main theme colors your app branding color for the app bar -->
		   	<item name="android:colorPrimary">#007950</item>

		    <!--  darker variant for the status bar and contextual app bars -->
		   	<item name="android:colorPrimaryDark">#006543</item>

		   	<item name="android:colorAccent">#006543</item>
		    <item name="android:textColorPrimary">#FFFFFF</item>
		    <item name="android:statusBarColor">#006543</item>
		    <item name="android:navigationBarColor">#006543</item>
		    <item name="android:alertDialogTheme">@style/TentacleAlertDialogTheme</item>
		    <item name="android:alertDialogStyle">@style/TentacleAlertDialogTheme</item>
    </style>

    <style name="NoTitleBar" parent="@android:style/Theme.Material.Light.NoActionBar.Overscan">

      	<!--   Main theme colors your app branding color for the app bar -->
		   	<item name="android:colorPrimary">#007950</item>

		    <!--  darker variant for the status bar and contextual app bars -->
		   	<item name="android:colorPrimaryDark">#006543</item>

		   	<item name="android:colorAccent">#006543</item>
		    <item name="android:textColorPrimary">#FFFFFF</item>
		    <item name="android:statusBarColor">#006543</item>
		    <item name="android:navigationBarColor">#006543</item>
    </style>

     <style name="TentacleAlertDialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">

    </style>

	<style name="Nodisplay" parent="@android:style/Theme.Translucent.NoTitleBar">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<!--   Main theme colors your app branding color for the app bar -->
		<item name="android:colorPrimary">#007950</item>

		<!--  darker variant for the status bar and contextual app bars -->
		<item name="android:colorPrimaryDark">#006543</item>

		<item name="android:colorAccent">#006543</item>
		<item name="android:textColorPrimary">#000000</item>
		<item name="android:statusBarColor">#006543</item>
		<item name="android:navigationBarColor">#006543</item>
	</style>
</resources>
